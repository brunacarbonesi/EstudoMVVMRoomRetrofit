<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/movies_list_empty_list_layout">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/fragment_movies_list_empty_list"
        app:layout_constraintStart_toStartOf="@id/fragment_movies_list_empty_list"
        app:layout_constraintBottom_toTopOf="@id/fragment_movies_list_empty_list"
        android:src="@drawable/ic_wifi"
        app:tint="@color/colorBackground"/>

    <TextView
        android:id="@+id/fragment_movies_list_empty_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        android:text="@string/lista_vazia"
        android:textColor="@color/colorAccentDark"
        android:textSize="24sp"
        android:fontFamily="@font/foco_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.6"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"/>
    <TextView
        android:id="@+id/fragment_movies_list_check_connection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="@string/check_network_connection"
        android:textColor="@color/colorGreyLight"
        android:textSize="18sp"
        android:fontFamily="@font/foco_light"
        app:layout_constraintStart_toStartOf="@id/fragment_movies_list_empty_list"
        app:layout_constraintTop_toBottomOf="@+id/fragment_movies_list_empty_list"
        app:layout_constraintEnd_toEndOf="@id/fragment_movies_list_empty_list"
        app:layout_constraintWidth_percent="0.6"
        android:gravity="center"
        android:maxLines="3"
        android:ellipsize="end"/>
</androidx.constraintlayout.widget.ConstraintLayout>